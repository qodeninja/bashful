#!/usr/bin/env bash

  #----------------------
    set -o pipefail
    shopt -s expand_aliases
    trap exit_signal EXIT
  #----------------------


  #----------------------
    OPTIND=1
    OPT_AUTO=0
    OPT_DEBUG=0
    OPT_CLEAN=0
    OPT_NUKE=0
    OPT_FORCE=0
    OPT_QUIET=0
    OPT_TEST=0
    OPT_BASH_SOURCED=0
    SHIFT_OPS=0
  #----------------------


  #----------------------
    CURR_DIR="$(pwd)"
    source "./lib/bashful-interface.sh";
  #----------------------


  #----------------------
  #last argument check
  if [[ "${@: -1}" =~ "-" ]]; then
    throw_error "Invalid argument, missing bashful command"
  fi
  #----------------------


  #----------------------
  # iterate over local arguments
    while getopts "cdants" option; do
      case "$option" in
        c)  #clean
            OPT_CLEAN=1
            SHIFT_OPS=1
            ;;
        a)  #auto
            OPT_AUTO=1
            SHIFT_OPS=1
            ;;
        n)  #nuke
            OPT_NUKE=1
            SHIFT_OPS=1
            ;;
        d)  #debug
            OPT_DEBUG=1
            SHIFT_OPS=1
            ;;
        t)  #test
            OPT_TEST=1
            SHIFT_OPS=1
            ;;
        q)  #quiet
            OPT_QUIET=1
            SHIFT_OPS=1
            ;;
        :)  # usage help
            echo -e "${red}[bashful] Error: missing argument"
            exit 1
            ;;
      esac
    done
  #----------------------

  #----------------------
  # remove any -option from args
  for item in "$@" ; do
    if [[ "$item" =~ "-" ]]; then
      debug "shifting $item\n"
      shift
    fi
  done
  #debug "BASHFUL ARGS => 0$0 1$1 2$2"
  #printf '%s\n' "${@}"
  #----------------------


  #----------------------
    if [ $OPT_TEST -eq 1 ] ; then
      bashful_test
    fi

    if [ $OPT_CLEAN -eq 1 ]; then
      bashful_clean
    fi

    if [ $OPT_NUKE -eq 1 ]; then
      bashful_nuke
    fi
  #----------------------
  

  
  #----------------------
  case "$1" in
      welcome)
        bashful_welcome "Bashful"
        ;;
      test)
        bashful_test
        OPT_COMMAND="TEST"
        ;;
      help)
        echo 'lets install something yay'
        ;;
      auto*|install*)
        bashful_install
        OPT_COMMAND="INSTALL"
        #bashful_install
        ;;
      clean*)
        bashful_clean
        OPT_COMMAND="CLEAN"
        ;;
      nuke)
        bashful_nuke
        OPT_COMMAND="NUKE"
        ;;
      *)
        echo -e "Usage: install | config ($1)"
        exit 1
  esac
  #----------------------
  
  exit $?

